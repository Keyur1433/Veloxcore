        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": [
                  "Capacity",
                  "Description",
                  "MaxAge",
                  "MinAge",
                  "Name",
                  "Photo",
                  "Price",
                  "SafetyLevel"
                ],
                "type": "object",
                "properties": {
                  "Name": {
                    "type": "string"
                  },
                  "Description": {
                    "type": "string"
                  },
                  "Price": {
                    "minimum": 1,
                    "type": "number",
                    "format": "double"
                  },
                  "Capacity": {
                    "maximum": 2147483647,
                    "minimum": 1,
                    "type": "integer",
                    "format": "int32"
                  },
                  "MinAge": {
                    "maximum": 99,
                    "minimum": 2,
                    "type": "integer",
                    "format": "int32"
                  },
                  "MaxAge": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "SafetyLevel": {
                    "pattern": "^(low|medium|high)$",
                    "type": "string"
                  },
                  "Photo": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "Name": {
                  "style": "form"
                },
                "Description": {
                  "style": "form"
                },
                "Price": {
                  "style": "form"
                },
                "Capacity": {
                  "style": "form"
                },
                "MinAge": {
                  "style": "form"
                },
                "MaxAge": {
                  "style": "form"
                },
                "SafetyLevel": {
                  "style": "form"
                },
                "Photo": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
