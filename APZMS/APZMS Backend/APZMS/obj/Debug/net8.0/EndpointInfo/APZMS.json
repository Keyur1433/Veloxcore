  "components": {
    "schemas": {
      "BookingDto": {
        "required": [
          "activityId",
          "bookingDate",
          "customerId",
          "timeSlot"
        ],
        "type": "object",
        "properties": {
          "customerId": {
            "type": "integer",
            "format": "int32"
          },
          "activityId": {
            "type": "integer",
            "format": "int32"
          },
          "bookingDate": {
            "type": "string",
            "format": "date-time"
          },
          "timeSlot": {
            "minLength": 1,
            "pattern": "^([01]\\d|2[0-3]):([0-5]\\d)$",
            "type": "string"
          },
          "participants": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
